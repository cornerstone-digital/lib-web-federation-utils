{
  "name": "lib-web-federation-utils",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "prepare": "husky install",
    "merge-test": "nyc merge ./.testresults ./.testresults/coverage.json",
    "merge-coverage": "nyc report --reporter=lcov --temp-dir .testresults --report-dir=.testresults/all/coverage",
    "// NX TEST COMMANDS": "==========================================================",
    "nx:all:test": "nx run-many --target=test --output-style=stream --all",
    "nx:all:test:watch": "nx run-many --target=test:watch --output-style=stream  --all",
    "nx:all:test:cc": "nx run-many --target=test:cc --output-style=stream --all",
    "nx:all:test:cc:watch": "nx run-many --target=test:cc:watch --output-style=stream --all",
    "nx:affected:test": "nx affected --target=test --output-style=stream",
    "nx:affected:test:watch": "nx affected --target=test:watch --output-style=stream",
    "nx:affected:test:cc": "nx affected --target=test:cc --output-style=stream",
    "nx:affected:test:cc:watch": "nx affected --target=test:cc:watch --output-style=stream",
    "// NX LINT COMMANDS": "==========================================================",
    "nx:all:lint": "nx run-many --target=lint --output-style=stream --all",
    "nx:affected:lint": "nx affected --target=lint --output-style=stream",
    "// NX BUILD COMMANDS": "==========================================================",
    "nx:all:build": "nx run-many --target=build --output-style=stream --all",
    "nx:all:build:watch": "nx run-many --target=build:watch --output-style=stream --all",
    "// Lerna Commands": "==============================================================",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:test:cc": "lerna run test:cc --stream",
    "lerna:test:cc:watch": "lerna run test:cc:watch --stream",
    "lerna:build": "lerna run build --stream",
    "lerna:version": "lerna version --no-push --conventional-commits --yes",
    "lerna:version:alpha": "lerna version --no-push --conventional-commits --conventional-prerelease --preid alpha --yes",
    "lerna:version:beta": "lerna version --no-push --conventional-commits --conventional-prerelease --preid beta --yes",
    "lerna:publish": "lerna publish from-git --yes",
    "lerna:publish:alpha": "lerna publish from-package --dist-tag alpha --yes",
    "lerna:publish:beta": "lerna publish from-package  --dist-tag beta --yes"
  },
  "dependencies": {
    "@swc/helpers": "~0.3.3",
    "core-js": "^3.6.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "regenerator-runtime": "0.13.7",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@nrwl/cli": "latest",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "latest",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@swc-node/jest": "^1.5.2",
    "@swc/cli": "~0.1.55",
    "@swc/core": "~1.2.143",
    "@swc/jest": "^0.2.21",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.5.1",
    "@types/node": "16.11.7",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-jest": "27.5.1",
    "eslint": "~8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-prefer-function-component": "^2.0.0",
    "husky": "^8.0.0",
    "jest": "27.5.1",
    "jest-location-mock": "^1.0.9",
    "jest-mock-fetch": "^2.0.5",
    "lerna": "^5.0.0",
    "nx": "^14.1.9",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rollup": "^2.75.3",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "ts-node": "^10.8.0",
    "typescript": "~4.6.2"
  },
  "resolutions": {
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "@types/node": "16.11.7",
    "@types/jest": "^27.5.1",

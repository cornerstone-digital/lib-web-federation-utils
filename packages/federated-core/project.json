{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/federated-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/federated-core",
        "main": "packages/federated-core/src/index.ts",
        "tsConfig": "packages/federated-core/tsconfig.lib.json",
        "assets": ["packages/federated-core/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/federated-core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/federated-core"],
      "options": {
        "jestConfig": "packages/federated-core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "preset": "conventional",
        "tagPrefix": "${projectName}@",
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]"
      }
    }
  },
  "tags": []
}

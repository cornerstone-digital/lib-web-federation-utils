{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "rootDir": "./",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./bin",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "scripts/genVersion.ts"],
  "exclude": ["node_modules"]
}
